<p class="notice"><%= notice %></p>
<p class="alert"><%= alert %></p>
<h1 class="mt-6 mb-12 text-center font-sans text-5xl">Write on <span class="text-red-600">Rails</span>!</h1>
<div class="text-center">
  <% if current_user %>
    <%= link_to "Log out", destroy_user_session_path, data: {"turbo-method": :delete} %>
  <% else %>
    <%= button_to "Login with Github", user_github_omniauth_authorize_path , data: { turbo: false }, class: "font-bold underline" %>
  <% end %>
</div>
